<div class="col-xs-12">
    <div class="footer-top">
        <div class="col-md-3 footer-news">
            <h5>Newsletter</h5>
        </div>
        <div class="col-md-9 ftr-email">
            {{ form_start(newsletter_form) }}
            {{ form_errors(newsletter_form) }}

            <div class="row">
                <div class="col-md-8">
                    {{ form_errors(newsletter_form.email) }}
                    {{ form_widget(newsletter_form.email, {attr: {placeholder: 'Votre adresse email'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_widget(newsletter_form.valider) }}
                </div>
            </div>

            {{ form_rest(newsletter_form) }}
            {{ form_end(newsletter_form) }}
        </div>
        <div class="clearfix"> </div>
    </div>
</div>